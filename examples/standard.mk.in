prefix := @prefix@
exec_prefix := @exec_prefix@
IVC_LIB := @libdir@
IVC_INC := @includedir@

ifeq ($(THREADED),y)
THR_RT_OPT := -threaded
endif

ifeq ($(PROFILING),y)
PROFILE_OPT := -prof
endif

all: $(BINARIES)

clean::
	rm -f $(BINARIES) *.hi *.o

%: %.hs
	halvm-ghc $(THR_RT_OPT) $(PROFILE_OPT) --make -o $@ $^

%: %.c
	gcc -o $@ $^ -I$(IVC_INC) $(IVC_LIB)/libIVC.a -lxenctrl -lcrypto -lxenstore
