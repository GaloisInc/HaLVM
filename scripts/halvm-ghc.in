prefix=@prefix@
exec_prefix=@exec_prefix@
bindir=@bindir@
libdir=@libdir@/HaLVM-@PACKAGE_VERSION@

GHCBIN="${bindir}/@target_prefix@ghc"
LINKSCRIPTOPT="-pgml ${libdir}/ldkernel -optl -static -rtsopts"
LIBDIROPT="-L${libdir}"

exec $GHCBIN $LIBDIROPT ${LINKSCRIPTOPT} ${1+"$@"}
